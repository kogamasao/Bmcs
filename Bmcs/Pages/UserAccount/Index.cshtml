@page
@model Bmcs.Pages.UserAccount.IndexModel

@{
    ViewData[ViewDataConstant.Title] = "ユーザ一覧(管理者)";
}

<h1>@ViewData[ViewDataConstant.Title]</h1>

<div class="form-group">
    @if (Model.IsMyTeam)
    {
    <a class="btn btn-primary" asp-page="Create">ユーザ作成</a>
    }
    <a class="btn btn-secondary" asp-page="/Top/Index">戻る</a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-sm table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UserAccountID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UserAccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].DeleteFLG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].TeamID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].Team.TeamName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].EntryUserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].EntryDatetime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UpdateUserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UpdateDatetime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserAccount) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccountID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeleteFLG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.TeamID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryUserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDatetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateUserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDatetime)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.UserAccountID">編集</a>
                    <span>&nbsp;</span>
                    <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.UserAccountID">詳細</a>
                    <span>&nbsp;</span>
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.UserAccountID">削除</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>
