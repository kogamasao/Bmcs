@page
@model Bmcs.Pages.UserAccount.CreateModel

@{
    ViewData[ViewDataConstant.Title] = "ユーザ作成";
}

<h1>@ViewData[ViewDataConstant.Title]</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserAccount.UserAccountID" class="control-label"></label>
                <input asp-for="UserAccount.UserAccountID" class="form-control" />
                <span asp-validation-for="UserAccount.UserAccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.UserAccountName" class="control-label"></label>
                <input asp-for="UserAccount.UserAccountName" class="form-control" />
                <span asp-validation-for="UserAccount.UserAccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.Password" class="control-label"></label>
                <input asp-for="UserAccount.Password" class="form-control" />
                <span asp-validation-for="UserAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.ConfirmPassword" class="control-label"></label>
                <input asp-for="UserAccount.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UserAccount.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.EmailAddress" class="control-label"></label>
                <input asp-for="UserAccount.EmailAddress" class="form-control" />
                <span asp-validation-for="UserAccount.EmailAddress" class="text-danger"></span>
            </div>
            <div class="alert alert-primary" role="alert">
                ※チームを作成済みの場合は以下を入力してください
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.TeamID" class="control-label"></label>
                <select asp-for="UserAccount.TeamID" class="form-control" asp-items="Model.TeamIDList"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.TeamPassword" class="control-label"></label>
                <input asp-for="UserAccount.TeamPassword" class="form-control" />
                <span asp-validation-for="UserAccount.TeamPassword" class="text-danger"></span>
            </div>
            <div class="form-group custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="term">
                <label class="custom-control-label" for="term"><a asp-area="" asp-page="/Term">利用規約</a>に同意する。</label>
            </div>
            <div class="form-group custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="privacy">
                <label class="custom-control-label" for="privacy"><a asp-area="" asp-page="/Privacy">プライバシーポリシー</a>に同意する。</label>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="登録" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/user-account.js" asp-append-version="true"></script>
}
