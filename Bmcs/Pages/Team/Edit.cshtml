@page
@model Bmcs.Pages.Team.EditModel

@{
    ViewData["Title"] = "チーム情報変更";
}

<h1>チーム情報変更</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.TeamID" />
            <div class="form-group">
                <label asp-for="Team.TeamName" class="control-label"></label>
                <input asp-for="Team.TeamName" class="form-control" />
                <span asp-validation-for="Team.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamPassword" class="control-label"></label>
                <input asp-for="Team.TeamPassword" class="form-control" />
                <span asp-validation-for="Team.TeamPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.ConfirmTeamPassword" class="control-label"></label>
                <input asp-for="Team.ConfirmTeamPassword" class="form-control" />
                <span asp-validation-for="Team.ConfirmTeamPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.RepresentativeName" class="control-label"></label>
                <input asp-for="Team.RepresentativeName" class="form-control" />
                <span asp-validation-for="Team.RepresentativeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamNumber" class="control-label"></label>
                <input asp-for="Team.TeamNumber" class="form-control" />
                <span asp-validation-for="Team.TeamNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamEmailAddress" class="control-label"></label>
                <input asp-for="Team.TeamEmailAddress" class="form-control" />
                <span asp-validation-for="Team.TeamEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.MessageDetail" class="control-label"></label>
                <textarea asp-for="Team.MessageDetail" class="form-control"></textarea>
                <span asp-validation-for="Team.MessageDetail" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Team.PublicFLG" /> @Html.DisplayNameFor(model => model.Team.PublicFLG)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="登録" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
