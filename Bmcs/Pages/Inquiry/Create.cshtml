@page
@model Bmcs.Pages.Inquiry.CreateModel
@{
    ViewData[ViewDataConstant.Title] = "お問い合わせ";
}

<h1>@ViewData[ViewDataConstant.Title]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inquiry.EmailAddress" class="control-label"></label>
                <input asp-for="Inquiry.EmailAddress" class="form-control" />
                <span asp-validation-for="Inquiry.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.InquiryTitle" class="control-label"></label>
                <input asp-for="Inquiry.InquiryTitle" class="form-control" />
                <span asp-validation-for="Inquiry.InquiryTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.InquiryDetail" class="control-label"></label>
                <textarea asp-for="Inquiry.InquiryDetail" class="form-control"></textarea>
                <span asp-validation-for="Inquiry.InquiryDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="登録" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="/Top/Index">戻る</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
