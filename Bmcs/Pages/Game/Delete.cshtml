@page
@model Bmcs.Pages.Game.DeleteModel

@{
    ViewData[ViewDataConstant.Title] = "試合削除";
}

<h1 class="d-inline-block">
    @ViewData[ViewDataConstant.Title]
</h1>

@await Html.PartialAsync("~/Pages/Shared/_Help.cshtml")

<h6 class="text-danger">試合情報を削除します。よろしいですか？</h6>
<div>
    <h4>@Model.Game.Team.TeamName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.OpponentTeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.OpponentTeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.OpponentTeamAbbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.OpponentTeamAbbreviation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.StadiumName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.StadiumName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.WeatherClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.WeatherClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.WinLoseClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.WinLoseClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameScore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameScore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.BatFirstBatSecondClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.BatFirstBatSecondClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameInputTypeClassName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameInputTypeClassName)
        </dd>
        @if (Model.IsAdmin())
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.StatusClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.StatusClass)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.EntryUserID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.EntryUserID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.EntryDatetime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.EntryDatetime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.UpdateUserID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.UpdateUserID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.UpdateDatetime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.UpdateDatetime)
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.TeamID" />
        <input type="hidden" asp-for="Game.GameID" />
        <div class="form-group">
            <input type="submit" value="削除" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-page="./Index" asp-route-teamID="@Model.Game.Team.TeamID">戻る</a>
        </div>
    </form>
</div>
